#!/bin/bash
# Automatically set KUBECONFIG to use the isolated cluster for this worktree
export KUBECONFIG="$(pwd)/.kube/config"

# Verify the cluster exists and is accessible
if [ -f "$KUBECONFIG" ]; then
    echo "üîß Using isolated cluster: $(kubectl config current-context 2>/dev/null || echo 'cluster not ready')"
else
    echo "‚ö†Ô∏è  No local kubeconfig found. Run 'make setup' to create isolated cluster."
fi
